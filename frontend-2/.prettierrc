{
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^[react]",
        "^@(?!/)",
        "^@/entities",
        "^@/features",
        "^@/widget",
        "^@/shared",
        "^.+\\.css$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
